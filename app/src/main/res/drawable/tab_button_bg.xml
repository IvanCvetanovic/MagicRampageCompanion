<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/>        <!-- slightly brighter fill -->
            <stroke android:width="2dp" android:color="#FFFFFFFF"/>
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Default (not selected) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey"/>        <!-- subtle fill -->
            <stroke android:width="1dp" android:color="#66FFFFFF"/>
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

</selector>
