<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grey_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Dungeon40">

        <TextView
            android:id="@+id/Dungeon40Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dungeon 40"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowRadius="10"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/Dungeon15Secrets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.313" />

        <TextView
            android:id="@+id/Dungeon15Secrets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="Tutorial:"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Picture1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/Picture1"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/roundcorner"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dungeon40boss1" />

        <TextView
            android:id="@+id/TipsandTricksText"
            android:layout_width="350dp"
            android:layout_height="340dp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="@string/dungeon40boss1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/Picture2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Picture1" />

        <ImageView
            android:id="@+id/Picture2"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:background="@drawable/roundcorner"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/TipsandTricksText1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TipsandTricksText"
            app:srcCompat="@drawable/dungeon40boss2" />

        <TextView
            android:id="@+id/TipsandTricksText1"
            android:layout_width="350dp"
            android:layout_height="580dp"
            android:layout_marginBottom="16dp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="@string/dungeon40boss2"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Picture2"
            app:layout_constraintVertical_bias="0.372" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>