<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grey_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dungeon17Bonus">

        <TextView
            android:id="@+id/Dungeon17BonusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dungeon 17 Bonus"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:shadowRadius="10"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/Dungeon9Secrets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.313" />

        <TextView
            android:id="@+id/Dungeon9Secrets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="Tutorial:"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundcorner"
            app:layout_constraintBottom_toTopOf="@+id/TipsandTricksText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.903"
            app:srcCompat="@drawable/dungeon17bonus1" />

        <TextView
            android:id="@+id/TipsandTricksText"
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="@string/dungeon17bonustext1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="350dp"
            android:layout_height="210dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundcorner"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/dungeon17bonus2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="@string/dungeon17bonustext2"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>