<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/grey_background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#1E0D0D"
        android:paddingBottom="24dp">

        <!-- Game Logo -->
        <ImageView
            android:id="@+id/GameLogo"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/gamelogo"
            tools:ignore="ContentDescription" />

        <!-- New WIP Label -->
        <TextView
            android:id="@+id/wipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/work_in_progress"
            android:textColor="#FF0000"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/GameLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dungeons Button -->
        <Button
            android:id="@+id/ChapterSelectionButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/dungeons"
            app:layout_constraintTop_toBottomOf="@id/wipLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Survival Mode Button -->
        <Button
            android:id="@+id/SurvivalModeSelectionButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/survival_mode"
            app:layout_constraintTop_toBottomOf="@+id/ChapterSelectionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Equipment Tester Button -->
        <Button
            android:id="@+id/EquipmentTesterButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/test_equipment"
            app:layout_constraintTop_toBottomOf="@+id/SurvivalModeSelectionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Achievements Button -->
        <Button
            android:id="@+id/AchievementButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/achievements"
            app:layout_constraintTop_toBottomOf="@+id/EquipmentTesterButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Items Button -->
        <Button
            android:id="@+id/ItemsButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/items"
            app:layout_constraintTop_toBottomOf="@+id/AchievementButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Enemies Button -->
        <Button
            android:id="@+id/EnemiesButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/enemies"
            app:layout_constraintTop_toBottomOf="@+id/ItemsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- About Button -->
        <Button
            android:id="@+id/AboutButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/about"
            app:layout_constraintTop_toBottomOf="@+id/EnemiesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
