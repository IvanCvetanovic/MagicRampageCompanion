<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/grey_background"
    tools:context=".ui.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#FFFFFF"
        android:outlineSpotShadowColor="#1E0D0D"
        android:paddingBottom="24dp">

        <!-- Game Logo -->

        <!-- Language Button moved to top-right corner -->
        <ImageView
            android:id="@+id/GameLogo"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gamelogo"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnLanguage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/options_icon"
            android:contentDescription="@string/change_language"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"/>

        <!-- Privacy / Ad Preferences Button -->
        <ImageButton
            android:id="@+id/btnAdPreferences"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ad_preferences_button"
            android:contentDescription="TODO"
            app:layout_constraintTop_toBottomOf="@id/btnLanguage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            tools:ignore="ContentDescription,HardcodedText" />

        <!-- Buttons -->
        <Button
            android:id="@+id/NewsButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/news"
            app:layout_constraintTop_toBottomOf="@id/GameLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/ChapterSelectionButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/dungeons"
            app:layout_constraintTop_toBottomOf="@+id/NewsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/SurvivalModeSelectionButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="15sp"
            android:text="@string/survival_mode"
            app:layout_constraintTop_toBottomOf="@+id/ChapterSelectionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/EquipmentTesterButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/test_equipment"
            app:layout_constraintTop_toBottomOf="@+id/SurvivalModeSelectionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/AchievementButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/achievements"
            app:layout_constraintTop_toBottomOf="@+id/EquipmentTesterButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/ItemsButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/items"
            app:layout_constraintTop_toBottomOf="@+id/AchievementButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/EnemiesButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/enemies"
            app:layout_constraintTop_toBottomOf="@+id/ItemsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- NEW: Skins button inserted here -->
        <Button
            android:id="@+id/SkinsButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/skins"
            app:layout_constraintTop_toBottomOf="@+id/EnemiesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/AboutButton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:shadowColor="@color/black"
            android:shadowRadius="30"
            android:textSize="16sp"
            android:text="@string/about"
            app:layout_constraintTop_toBottomOf="@+id/SkinsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
