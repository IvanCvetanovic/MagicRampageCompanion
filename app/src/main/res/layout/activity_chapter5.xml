<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grey_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Chapter4">

        <ImageButton
            android:id="@+id/Dungeon41Button"
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dungeon41button" />

        <ImageButton
            android:id="@+id/Dungeon42Button"
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Dungeon41Button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dungeon42button" />

        <ImageButton
            android:id="@+id/Dungeon42BonusButton"
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Dungeon42Button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dungeon42bonusbutton" />

        <ImageButton
            android:id="@+id/Dungeon43Button"
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Dungeon42BonusButton"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dungeon43button" />

        <ImageButton
            android:id="@+id/Dungeon43BonusButton"
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Dungeon43Button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dungeon43bonusbutton" />

        <ImageButton
            android:id="@+id/Dungeon44Button"
            android:layout_width="810dp"
            android:layout_height="910dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Dungeon43BonusButton"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dungeon44button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>