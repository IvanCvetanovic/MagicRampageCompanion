                android:background="#FFFFFF">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/fifty_kills"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0dp"
