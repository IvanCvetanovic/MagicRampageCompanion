<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grey_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Dungeon41">

        <TextView
            android:id="@+id/Dungeon41Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dungeon 41"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowRadius="10"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/Dungeon15Secrets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.313" />

        <TextView
            android:id="@+id/Dungeon15Secrets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secret Areas:"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowRadius="10"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="515dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:background="@drawable/roundcorner"
            app:layout_constraintBottom_toTopOf="@+id/Dungeon1Info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/dungeon41secrets" />

        <TextView
            android:id="@+id/Dungeon1Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Tips and Tricks:"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowRadius="10"
            android:shadowColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/TipsandTricksText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TipsandTricksText"
            android:layout_width="350dp"
            android:layout_height="380dp"
            android:layout_marginBottom="20dp"
            android:shadowColor="@color/black"
            android:shadowRadius="10"
            android:text="@string/dungeon41text"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>